{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Customer",
  "description": "SuperMegaSafe AS cusomers",
  "type": "object",
  "required": [
    "id",
    "firstname",
    "lastname",
    "email",
    "mobile no.",
    "street address",
    "postal code",
    "city"
  ],
  "properties": {
    "id": {
      "type": "integer",
      "description": "unique customer id."
    },
    "firstname": {
      "type": "string",
      "description": "The customer's first name."
    },
    "lastname": {
      "type": "string",
      "description": "The customer's last name."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "The customer's email address using various domains."
    },
    "mobile no.": {
      "type": "string",
      "pattern": "^[0-9]{8}$",
      "description": "A Norwegian 8-digit mobile number."
    },
    "street address": {
      "type": "string",
      "description": "The street name and house number."
    },
    "postal code": {
      "type": "string",
      "pattern": "^[0-9]{4}$",
      "description": "A Norwegian 4-digit postal code (0001-9999)."
    },
    "city": {
      "type": "string",
      "description": "The city or postal area associated with the postal code."
    }
  }
}
